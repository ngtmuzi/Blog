<hr/>

<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <ul class="list-inline text-center">
                    <% if (theme.twitter_url) { %>
                    <li>
                        <a href="<%- theme.twitter_url %>" target="_blank">
                                <span class="fa fa-twitter fa-lg">
                                </span>
                        </a>
                    </li>
                    <% } %>

                    <% if (theme.weibo_url) { %>
                    <li>
                        <a href="<%- theme.weibo_url %>" target="_blank">
                                <span class="fa fa-weibo fa-lg">
                                </span>
                        </a>
                    </li>
                    <% } %>

                    <% if (theme.acfun_url) { %>
                    <li>
                        <a href="<%- theme.acfun_url %>" target="_blank">
                                <span class="fa fa-play fa-lg">
                                </span>
                        </a>
                    </li>
                    <% } %>

                    <% if (theme.ytb_url) { %>
                    <li>
                        <a href="<%- theme.ytb_url %>" target="_blank">
                                <span class="fa fa-youtube fa-lg">
                                </span>
                        </a>
                    </li>
                    <% } %>

                    <% if (theme.bili_url) { %>
                    <li>
                        <a href="<%- theme.bili_url %>" target="_blank">
                                <span class="fa fa-stop fa-lg">
                                </span>
                        </a>
                    </li>
                    <% } %>

                    <% if (theme.facebook_url) { %>
                    <li>
                        <a href="<%- theme.facebook_url %>" target="_blank">
                                <span class="fa fa-facebook fa-lg">
                                </span>
                        </a>
                    </li>
                    <% } %>

                    <% if (theme.github_url) { %>
                    <li>
                        <a href="<%- theme.github_url %>" target="_blank">
                                <span class="fa fa-github fa-lg">
                                </span>
                        </a>
                    </li>
                    <% } %>

                    <% if (theme.rss_url) { %>
                    <li>
                        <a href="<%- theme.rss_url %>" target="_blank">
                                <span class="fa fa-rss fa-lg">
                                </span>
                        </a>
                    </li>
                    <% } %>

                    <% if (theme.linkedin_url) { %>
                    <li>
                        <a href="<%- theme.linkedin_url %>" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
                                </span>
                        </a>
                    </li>
                    <% } %>

                    <% if (theme.mailto) { %>
                    <li>
                        <a href="mailto:<%- theme.mailto %>" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-envelope-o fa-stack-1x fa-inverse"></i>
                                </span>
                        </a>
                    </li>
                    <% } %>

                    <% if (theme.gitlab_url) { %>
                    <li>
                        <a href="<%- theme.gitlab_url %>" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-gitlab fa-stack-1x fa-inverse"></i>
                                </span>
                        </a>
                    </li>
                    <% } %>
                </ul>
                <div class="copyright">
                    <p>
                        &copy; <%= date(new Date(), 'YYYY') %> <%= config.author || config.title %>
                    </p>
                    <div class="text-muted">
                        Original Theme <a target="_blank"
                                          href="http://startbootstrap.com/template-overviews/clean-blog/">Clean
                            Blog</a> from <a href="http://startbootstrap.com/" target="_blank">Start Bootstrap</a><br>
                        Adapted for <a target="_blank" href="https://hexo.io/">Hexo</a> by <a
                                href="http://www.codeblocq.com/" target="_blank">Jonathan Klughertz</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
